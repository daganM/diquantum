<% content_for :title, @article.title %>
<div class="row">
  <h1 class="col-xs-10"><%= @article.title %></h1>
  <div class="col-xs-1 starDiv">
    <% if account_signed_in? %>
      <% if @stared == false %>
        <%= link_to image_tag("star.png", :alt => "Ajouter aux favoris", :class => "star"), article_fav_path %>
      <% else %>
        <%= link_to image_tag("stared.png", :alt => "Retirer des favoris", :class => "star"), article_fav_path %>
      <% end %>
    <% end %>
  </div>
</div>
<p id="notice"><%= notice %></p>
<% @article.notions.each do |notion| %>
 <a href="<%= notion_path(id: notion) %>" class="btn btn-default">
   <%= notion.title %>
 </a>
<% end %>
<p>
  <%= @article.content.html_safe %>
</p>

<%= link_to 'Edit', edit_article_path(id: @article) %> |
<%= link_to 'Back', articles_path %>
